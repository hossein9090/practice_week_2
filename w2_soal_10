tool=int(input("tool ra vared kon : "))
ertefa=int(input("ertefa ra vared kon : "))

space=tool-2
blc=" "
count=ertefa


for j in range(1,ertefa+1):
    count-=1
    if j==1 :
        print(count*blc,tool*"*")
    elif j==ertefa:
        print(count*blc,tool*"*")
    else:
        print(count*blc,"*",space*blc,"*")
        



